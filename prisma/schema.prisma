generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id    Int     @id @default(autoincrement())
  title String  @db.VarChar(255)

  @@map(name: "organizations")
}
model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String
  hash String

  firstname String?
  lastname String?
}
